generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id               String    @id @default(uuid())
  userId           String
  device           String
  deviceId         String
  ip               String
  userAgent        String
  refreshTokenHash String
  revokedAt        DateTime?
  expiresAt        DateTime
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
  @@index([refreshTokenHash])
  @@map("sessions")
}
